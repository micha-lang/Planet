    <script>
        // JavaScript for interactive collapsible sections
        document.addEventListener('DOMContentLoaded', function () {
            const dayHeaders = document.querySelectorAll('[id^="day-header-"]');

            dayHeaders.forEach(header => {
                header.addEventListener('click', () => {
                    const contentId = header.id.replace('header', 'content');
                    const content = document.getElementById(contentId);
                    const icon = header.querySelector('.material-icons-outlined');

                    if (content.style.maxHeight === '0px' || content.style.maxHeight === '') {
                        // Expand the content
                        content.style.maxHeight = content.scrollHeight + 'px';
                        icon.classList.remove('rotate-180');
                    } else {
                        // Collapse the content
                        content.style.maxHeight = '0px';
                        icon.classList.add('rotate-180');
                    }
                });
            });
        });
    </script>

